<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taim.desktopui.controllers.payment.PaymentTransactionController">
   <children>
      <HBox AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="20.0">
         <children>
            <JFXButton disable="true" mnemonicParsing="false" onAction="#handleFindTransactionsButton" styleClass="button-flat" text="Find Transactions">
               <tooltip>
                  <Tooltip text="Select a customer to enable button" />
               </tooltip>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
      <TableView fx:id="transactionTableView" editable="true" prefHeight="504.0" prefWidth="1331.0" tableMenuButtonVisible="false" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="75.0">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="idCol" editable="true" prefWidth="65.0" text="Transaction ID" />
            <TableColumn fx:id="dateCol" maxWidth="5000.0" minWidth="10.0" prefWidth="65.0" text="Date" />
            <TableColumn fx:id="typeCol" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="amountCol" prefWidth="75.0" text="Amount" />
            <TableColumn fx:id="balanceCol" maxWidth="5000.0" minWidth="10.0" prefWidth="65.0" text="Balance" />
            <TableColumn fx:id="paymentCol" prefWidth="75.0" text="Payment" />
            <TableColumn fx:id="deleteCol" maxWidth="5000.0" minWidth="10.0" prefWidth="45.0" sortable="false" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
